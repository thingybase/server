%picture{class: @css_class}
  - case @mode
  - when nil
    %source(media="(prefers-color-scheme: dark)" srcset="#{dark_vector_path(@asset, format: :svg)}")
    =image_tag light_vector_path(@asset, format: :svg), alt: @alt
  - when :dark
    =image_tag dark_vector_path(@asset, format: :svg), alt: @alt
  - when :light
    =image_tag light_vector_path(@asset, format: :svg), alt: @alt

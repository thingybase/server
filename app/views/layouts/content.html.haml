= render_layout "application" do
  .columns
    .column
      %h1.title= current_page.data.fetch("title")
      - if subtitle = current_page.data.fetch("subtitle", nil)
        %h2.subtitle= subtitle
      .content
        = yield
    .column.is-2
      %aside.menu
        - with current_page.parent do |root_page|
          %p.menu-label
            = root_page.data.fetch("title")
          %ul.menu-list
            - root_page.children.each do |page|
              %li
                = link_to_page page, active_class: "is-active"

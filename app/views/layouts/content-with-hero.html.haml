= render_layout "page" do
  .hero.is-large{style: background_image_style}
    .hero-body
      .container
        %h1.title
          .is-slab-text= current_page.data.fetch("title")
        - if subtitle = current_page.data.fetch("subtitle", nil)
          %h2.subtitle
            .is-slab-text= subtitle
  %section.section
    .container
      .columns
        .column.is-offset-2.is-6
          .content
            = yield
        .column.is-2
          %aside.menu
            - with current_page.parent do |root_page|
              %p.menu-label
                = root_page.data.fetch("title")
              %ul.menu-list
                - root_page.children.each do |page|
                  %li
                    = link_to_page page, active_class: "is-active"

<section class="container-lg">
  <%= title "API Keys", subtitle: "Connect to other applications and services with API keys", icon: "key" %>

  <%= link_to "+ New API key ", new_api_key_path, class: 'btn btn-primary' %>

  <div class="list-cards">
    <% @api_keys.each do |api_key| %>
      <%= component :list_card, api_key.name, api_key_path(api_key) do |card| %>
        <% card.detail do %>
          Created
          <%= local_time api_key.created_at %>
        <% end %>
      <% end %>
    <% end %>
  </div>
</section>
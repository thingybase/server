- model_class = Acknowledgement
.page-header
  %h1=t '.title', :default => [:'helpers.titles.new', 'New %{model}'], :model => model_class.model_name.human.titleize
= simple_form_for [@notification, @acknowledgement], :html => { :class => 'form-horizontal' } do |f|
  = f.association :notification, collection: policy_scope(Notification), include_blank: false
  = f.button :submit, :class => 'btn-primary'

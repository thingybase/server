.page-header
  %h1=t '.title', :default => resource_class.model_name.human.titleize

%p
  %strong= resource_class.human_attribute_name(:subject) + ':'
  %br
  = @notification.subject
%p
  %strong= resource_class.human_attribute_name(:message) + ':'
  %br
  = @notification.message
%p
  %strong= resource_class.human_attribute_name(:user_id) + ':'
  %br
  = @notification.user.name

= link_to t('.edit', :default => t("helpers.links.edit")), edit_notification_path(@notification), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), notification_path(@notification), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
= link_to t('.acknowledge', :default => t("helpers.links.acknowledge")), notification_acknowledgements_path(@notification), :class => 'btn btn-default', method: :post

- model_class = Notification
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:subject) + ':'
  %br
  = @notification.subject
%p
  %strong= model_class.human_attribute_name(:message) + ':'
  %br
  = @notification.message
%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @notification.user_id


= link_to t('.back', :default => t("helpers.links.back")), notifications_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_notification_path(@notification), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), notification_path(@notification), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'

- model_class = TeamInvitation
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:email) + ':'
  %br
  = @team_invitation.email
%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @team_invitation.name
%p
  %strong= model_class.human_attribute_name(:team_id) + ':'
  %br
  = @team_invitation.team.name
%p
  %strong= model_class.human_attribute_name(:expires_at) + ':'
  %br
  = @team_invitation.expires_at
%p
  %strong Link
  %br
  =link_to edit_team_invitation_response_url(@team_invitation.token), edit_team_invitation_response_url(@team_invitation.token)
= link_to t('.back', :default => t("helpers.links.back")), team_invitations_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_team_invitation_path(@team_invitation), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), team_invitation_path(@team_invitation), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'

= simple_form_for @team_invitation, :html => { :class => 'form-horizontal' } do |f|
  = f.input :email, autofocus: true
  = f.error_span :email
  = f.input :name
  = f.error_span :name
  = f.association :team, collection: policy_scope(Team), include_blank: false
  = f.error_span :team_id
  = f.button :submit, :class => 'btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), team_invitations_path, :class => 'btn btn-default'

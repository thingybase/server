- model_class = TeamInvitation
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:email)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:team_id)
      %th= model_class.human_attribute_name(:user_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @team_invitations.each do |team_invitation|
      %tr
        %td= link_to team_invitation.email, team_invitation_path(team_invitation)
        %td= team_invitation.name
        %td= team_invitation.team.name
        %td= team_invitation.user.name
        %td= local_time team_invitation.created_at
        %td
          = link_to t('.show', :default => t("helpers.links.show")), team_invitation_path(team_invitation), :class => 'btn btn-default btn-xs'
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_team_invitation_path(team_invitation), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), team_invitation_path(team_invitation), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_team_invitation_path, :class => 'btn btn-primary'

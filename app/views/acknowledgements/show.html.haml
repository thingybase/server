- model_class = Acknowledgement
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @acknowledgement.user.name
%p
  %strong= model_class.human_attribute_name(:notification_id) + ':'
  %br
  = @acknowledgement.notification.name


= link_to t('.back', :default => t("helpers.links.back")), acknowledgements_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_acknowledgement_path(@acknowledgement), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), acknowledgement_path(@acknowledgement), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'

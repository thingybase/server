- model_class = Acknowledgement
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:notification_id)
      %th= model_class.human_attribute_name(:user_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @acknowledgements.each do |acknowledgement|
      %tr
        %td= link_to acknowledgement.notification.name, acknowledgement_path(acknowledgement)
        %td= acknowledgement.user.name
        %td=l acknowledgement.created_at
        %td
          = link_to t('.show', :default => t("helpers.links.show")), acknowledgement_path(acknowledgement), :class => 'btn btn-default btn-xs'
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_acknowledgement_path(acknowledgement), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), acknowledgement_path(acknowledgement), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_acknowledgement_path, :class => 'btn btn-primary'

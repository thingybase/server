- model_class = PhoneNumberClaim
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:phone_number) + ':'
  %br
  = @phone_number_claim.phone_number
%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @phone_number_claim.user.name

= link_to t('.back', :default => t("helpers.links.back")), phone_number_claims_path, :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), phone_number_claim_path(@phone_number_claim), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'

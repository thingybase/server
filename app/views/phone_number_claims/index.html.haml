%h1.title=t '.title', default: resource_class.model_name.human.pluralize.titleize
%table.table.is-fullwidth.is-striped
  %thead
    %tr
      %th= resource_class.human_attribute_name(:phone_number)
      %th= resource_class.human_attribute_name(:user_id)
      %th= resource_class.human_attribute_name(:created_at)
      %th=t '.actions', default: t("helpers.actions")
  %tbody
    - @phone_number_claims.each do |phone_number_claim|
      %tr
        %td= link_to phone_number_claim.phone_number, phone_number_claim_path(phone_number_claim)
        %td= phone_number_claim.user.name
        %td= local_time phone_number_claim.created_at
        %td
          = link_to t('.show', default: t("helpers.links.show")), phone_number_claim_path(phone_number_claim), class: 'button is-default is-xs'
          = link_to t('.destroy', default: t("helpers.links.destroy")), phone_number_claim_path(phone_number_claim), method: :delete, data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'button is-xs is-danger'

= link_to t('.new', default: t("helpers.links.new")), new_phone_number_claim_path, class: 'button is-primary'

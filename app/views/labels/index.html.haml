.page-header
  %h1=t '.title', :default => resource_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= resource_class.human_attribute_name(:text)
      %th= resource_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @labels.each do |label|
      %tr
        %td= link_to label.text, label
        %td= local_time label.created_at
        %td
          = link_to t('.show', :default => t("helpers.links.show")), label, :class => 'btn btn-default btn-xs'
          = link_to t('.print', :default => t("helpers.links.print")), label_path(label, format: :pdf), :class => 'btn btn-default btn-xs'
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_label_path(label), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), label_path(label), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_label_path, :class => 'btn btn-primary'

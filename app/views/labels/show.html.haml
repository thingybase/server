%h1.title=resource.text

=breadcrumb label_breadcrumbs

=resource_field :text
=resource_field :item_or_container do
  -if labelable = resource.labelable
    =link_to labelable.name, labelable
  -else
    Not linked to item or container
=resource_field :label_link do
  =link_to label_uuid_redirector_url(resource)
=resource_field :created_at do
  =local_time resource.created_at
=resource_field :updated_at do
  =local_time resource.updated_at
=resource_field :created_by do
  =resource.user.name

.buttons
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_label_path(@label), :class => 'button'
  = link_to "Print label", label_path(@label, format: :pdf), :class => 'button'
  = link_to "Print jumbo label", label_path(@label, format: :pdf, size: :large), :class => 'button is-text'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), label_path(@label), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'button is-text'

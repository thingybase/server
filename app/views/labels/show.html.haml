%h1.title=resource.text

=resource_field :text
=resource_field :labelable do
  -if labelable = resource.labelable
    =link_to labelable.name, labelable
  -else
    Not linked to item or container
=resource_field :uuid
=resource_field :created_at
=resource_field :updated_at
=resource_field :user do
  =resource.user.name

= link_to t('.print', :default => t("helpers.links.print")), label_path(@label, format: :pdf), :class => 'button is-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_label_path(@label), :class => 'button is-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), label_path(@label), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'button is-danger'

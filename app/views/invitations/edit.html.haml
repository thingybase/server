%h1 Edit #{resource_name}
= simple_form_for @invitation, :html => { :class => 'form-horizontal' } do |f|
  = f.input :email, autofocus: true
  = f.input :name
  = f.association :team, collection: policy_scope(Team), include_blank: false
  = f.button :submit, :class => 'btn-primary'
  = link_to t('.destroy', default: t("helpers.links.destroy")), invitation_path(@invitation), method: "delete", data: { confirm: t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'


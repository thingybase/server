.page-header
  %h1=t '.title', :default => resource_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= resource_class.human_attribute_name(:email)
      %th= resource_class.human_attribute_name(:name)
      %th= resource_class.human_attribute_name(:team_id)
      %th= resource_class.human_attribute_name(:user_id)
      %th= resource_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @invitations.each do |invitation|
      %tr
        %td= link_to invitation.email, invitation_path(invitation)
        %td= invitation.name
        %td= invitation.team.name
        %td= invitation.user.name
        %td= local_time invitation.created_at
        %td
          = link_to t('.show', :default => t("helpers.links.show")), invitation_path(invitation), :class => 'btn btn-default btn-xs'
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_invitation_path(invitation), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), invitation_path(invitation), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_invitation_path, :class => 'btn btn-primary'

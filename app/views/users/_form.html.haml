= simple_form_for @user, :html => { :class => 'form-horizontal' } do |f|
  = f.input :name, autofocus: true
  = f.error_span :name
  = f.input :email
  = f.error_span :email
  = f.input :phone_number, disabled: true
  = f.error_span :phone_number
  =link_to "#{@user.phone_number ? "Change" : "Add" } phone number", new_phone_number_claim_path
  = f.button :submit, :class => 'btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), users_path, :class => 'btn btn-default'

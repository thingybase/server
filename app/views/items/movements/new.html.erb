<%= title "Move #{@item.name}", subtitle: "Choose where you'd like to move #{@item.name}", icon: "dolly-cart" %>

<%= application_form @movement, url: url_for(action: :create) do |f| %>
  <%= f.input :account, as: :hidden %>
  <%= f.input :origin, as: :hidden %>
  <%= f.association :destination, collection: destination_select_items, include_blank: false, hint: "Where will it be moved?" %>
  <div class="buttons">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
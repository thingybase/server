= simple_form_for @item do |f|
  = f.input :name, autofocus: true
  = f.association :account, collection: policy_scope(Account), include_blank: false
  = f.association :container, collection: account_policy_scope(Container), include_blank: true
  = f.input :created_at, as: :string, hint: %[Dates and times like "Jan 1", "last week", "an hour from now" all work]
  = f.button :submit, class: 'is-primary'

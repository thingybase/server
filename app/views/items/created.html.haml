= title resource.name, subtitle: breadcrumb(item_breadcrumbs), icon: @item.icon

.notification
  %p.mb-4 Item created
  .field
    = link_to "Copy", new_item_copy_path(@item), class: 'button is-fullwidth'
  .field
    = link_to "Change icon", edit_item_icon_path(@item), class: 'button is-fullwidth'
  .field
    -if label = resource.label
      = link_to "View label", label_path(label), class: 'button is-fullwidth'
    -else
      = link_to "Print label", item_labels_path(resource), class: 'button is-fullwidth', method: :post

<%= title resource.name, icon: @item.icon, subtitle: "Navigate to the container" %>

<div class="buttons">
  <%= link_to "← Back", :back, class: "btn", "data-turbolinks-action": "replace" %>
</div>

<div class="list-card">
<%= render Components::List::ItemCardComponent.new(item: @item) %>
<% @item.ancestors.reverse.each do %>
  <%= render Components::List::ItemCardComponent.new(item: _1) %>
<% end %>
<%= render Components::List::CardComponent.new(@account.name, account_items_path(@account), icon: "chest-open") do |card| %>
  <% card.detail do %>
    Created
    <%= local_time_ago @account.created_at %>
  <% end %>
<% end %>
</div>

.list-card--item{id: dom_id(item)}
  .list-card--item--title.has-inline-icon
    =component :icon, item.icon, class: "icon mr-2 is-small"
    =link_to item.name, item
  .list-card--item--details
    .list-card--item--detail
      Created
      =local_time_ago item.created_at
    -if item.expires_at
      .list-card--item--detail
        =item_expiration_tense item
        =local_time_ago item.expires_at
    -if block_given?
      =yield

.list-card--item
  .list-card--item--title=link_to item.name, item
  .list-card--item--details
    .list-card--item--detail
      =item.container ? "Container" : "Item"
    .list-card--item--detail
      Created
      =local_time_ago item.created_at
    -if item.shelf_life_end
      .list-card--item--detail
        =item_expiration_tense item
        =local_time_ago item.shelf_life_end
    -if block_given?
      =yield
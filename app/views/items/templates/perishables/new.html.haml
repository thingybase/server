= item_template_title "Add perishable item", item: @item

= application_form @item, url: url_for(action: :create) do |f|
  = f.input :name, autofocus: true
  = f.association :account, as: :hidden
  = f.association :parent, as: :hidden
  = f.input :container, as: :hidden
  = f.input :shelf_life_begin, as: :string, hint: %[Dates like "Today", "Jan 1", "last week" all work]
  = f.input :shelf_life_end, as: :string, hint: %[Dates like "6 months from now", "next week", "Feb 2021" all work]
  = f.input :icon_key, label: "Icon", collection: icons, as: :image_radio_buttons
  = f.button :submit, class: 'is-primary'

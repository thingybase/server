<%= title "Edit account", subtitle: "Change your account settings" %>

<%= application_form @account, html: { class: 'form-horizontal' } do |f| %>
  <%= f.input :name, autofocus: true %>
  <%= f.button :submit, "Save changes", class: 'btn btn-primary' %>
<% end %>


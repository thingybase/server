<section class="container-lg">
  <%= title "Pick an account", subtitle: "Switch into a different account or create a new account" %>

  <div class="flex flex-col">
    <% @accounts.each do |account| %>
      <%= render Components::List::CardComponent.new(account.name, account) do |card| %>
        <% card.detail do %>
          Created <%= local_time_ago account.created_at %>
        <% end %>
        <% card.detail do %>
          <%= pluralize account.items.size, "item" %>
        <% end %>
      <% end %>
    <% end %>
  </div>

  <%= link_to "+ Create new account", new_account_path, class: 'btn' %>
</section>

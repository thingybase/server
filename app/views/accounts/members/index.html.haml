.page-header
  %h1=t '.title', :default => resource_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= resource_class.human_attribute_name(:user_id)
      %th= resource_class.human_attribute_name(:created_at)
  %tbody
    - @members.each do |member|
      %tr
        %td= link_to member.user.name, member_path(member)
        %td= local_time member.created_at
= link_to t('.new', :default => t("helpers.links.new")), new_account_invitation_path(@account), :class => 'btn btn-primary'

= title "People", subtitle: "Control access to the #{@account.name} account", icon: "basketball-jersey"

.buttons
  = link_to "+ Invite a person", new_account_invitation_path(@account), class: 'button is-primary'

- if @members.empty?
  .empty-box
    .title.is-5 No pending account members
    .subtitle.is-6 People will appear here after they accept an invitation
    = link_to "+ Invite a person", new_account_invitation_path(@account), class: 'button'
- else
  - @members.each do |member|
    .list-card--item
      .list-card--item--title= link_to member.name, member_path(member)
      .list-card--item--details
        .list-card--item--detail
          Became team member
          = local_time_ago member.created_at

.primary-nav
  %nav.primary-nav--left
    = active_link_to "Pagerline", root_path, class: "navbar-brand"
  -if logged_in?
    %nav.primary-nav--center
      = active_link_to "Notifications", notifications_path
      = active_link_to "Teams", teams_path
    %nav.primary-nav--right
      %span
        Logged in as
        = current_user.name
      = active_link_to "Settings", edit_user_path(current_user)
      -#
        %span.primary-nav--dropdown
          .primary-nav--dropdown--label
            %span
          .primary-nav--dropdown--items
            = active_link_to "Members", members_path
            = active_link_to "Acknowledgements", acknowledgements_path
            = active_link_to "Invitations", team_invitations_path
            = active_link_to "Sign out", session_path, method: :delete
  -else
    %nav.primary-nav--right
    = active_link_to "Signup", teams_path
    = active_link_to "Log in", teams_path


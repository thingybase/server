.navbar.navbar-default.navbar-static-top
  .container
    %button.navbar-toggle(type="button" data-toggle="collapse" data-target=".navbar-responsive-collapse")
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    = link_to "Pagerline", root_path, class: "navbar-brand"
    -if logged_in?
      .navbar-collapse.collapse.navbar-responsive-collapse
        %ul.nav.navbar-nav
          %li= link_to "Notifications", notifications_path
          %li= link_to "Teams", teams_path
          %li= link_to "Members", members_path
        %ul.nav.navbar-nav.navbar-right
          %li.dropdown
            %a.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
              Logged in as #{current_user.name}
              %span.caret
            %ul.dropdown-menu
              %li= link_to "Settings", edit_user_path(current_user)
              %li= link_to "Sign out", session_path, method: :delete
    -else
      .navbar-collapse.collapse.navbar-responsive-collapse
        %ul.nav.navbar-nav
        %ul.nav.navbar-nav.navbar-right
          %li= link_to "Signup", notifications_path
          %li= link_to "Log in", notifications_path

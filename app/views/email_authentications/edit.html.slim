= title "Verify login code"

h2.subtitle Look for a <strong>6 digit code</strong> in the inbox or spam folder for <strong>#{@verification.data}</strong>

= application_form @verification, url: url_for(action: :update) do |f|
  = f.input :code, autofocus: true, hint: "You have a few minutes to enter the code before it expires", pattern: '[0-9]*'
  = f.input :data, as: :hidden
  = f.input :salt, as: :hidden

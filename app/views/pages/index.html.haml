.section
  %h1 Thingybase
  %p.lead Keep track of your stuff
  %p=link_to "Get started →", launch_accounts_path, class: "btn btn-primary btn-lg", role: "button"
.section
  %h2 Plans & pricing
  %h3 Free during beta testing!
  %p Try thingybase as long as you’d like for a few items, then upgrade when you’re ready to scale your account and keep track of more stuff.
  .plans-listing
    .plans-listing--plan
      =image_tag "solo.svg", style: "max-width: 100%;"
      %h2 Personal
      %p 100 items
      %p 1 user
      %p.plans-listing--plan--price $0
      %p.plans-listing--plan--beta-price Free during beta testing
      %p=link_to "Sign up", new_session_path, class: "btn btn-primary btn-lg", role: "button"
    .plans-listing--plan
      =image_tag "startup.svg", style: "max-width: 100%;"
      %h2 Family
      %p Unlimited items
      %p 5 users
      %p.plans-listing--plan--price $49.99/year
      %p.plans-listing--plan--beta-price Free during beta testing
      %p=link_to "Sign up", new_session_path, class: "btn btn-primary btn-lg", role: "button"
    .plans-listing--plan
      =image_tag "account.svg", style: "max-width: 100%;"
      %h2 Business
      %p Unlimited items
      %p 25 users
      %p.plans-listing--plan--price $99.99/year
      %p.plans-listing--plan--beta-price Free during beta testing
      %p=link_to "Sign up", new_session_path, class: "btn btn-primary btn-lg", role: "button"
    .plans-listing--plan
      =image_tag "business.svg", style: "max-width: 100%;"
      %h2 Enterprise
      %p Unlimited items
      %p Unlimited users
      %p.plans-listing--plan--price Contact for pricing
      %p.plans-listing--plan--beta-price Free during beta testing
      %p=link_to "Sign up", new_session_path, class: "btn btn-primary btn-lg", role: "button"
  %h2 Not sure yet? Thingybase for free
  %p.lead Take it for a spin and see how Thingybase helps you get a handle on your stuff.
  %p=link_to "Sign up →", new_session_path, class: "btn btn-primary btn-lg", role: "button"

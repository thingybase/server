%h1.title Create item in #{@container.name}

= simple_form_for @item do |f|
  = f.input :name, autofocus: true
  = f.input :created_at, as: :string, hint: %[Dates and times like "Jan 1", "last week", "an hour from now" all work]
  = f.association :account, as: :hidden
  = f.association :container, as: :hidden
  = f.button :submit, :class => 'is-primary'

%h1.title=resource.name

.breadcrumb(aria-label="breadcrumbs")
  %ul
    %li=link_to @account.name, account_containers_path(@account)
    -@container.ancestors.reverse.each do |container|
      %li.is-hidden-mobile=link_to container.name, container
    -if parent = @container.parent
      %li.is-hidden-tablet-only.is-hidden-desktop-only.is-hidden-widescreen-only=link_to '..', parent
    %li.is-active=link_to resource.name, resource, 'aria-current': "page"

.buttons.has-addons
  = link_to "Add item", new_container_item_path(@container), :class => 'button is-primary'
  = link_to "Add container", new_container_child_path(@container), :class => 'button is-primary'


.list-card
  - @container.children.each do |container|
    .list-card--item
      .list-card--item--title=link_to container.name, container
      .list-card--item--details
        .list-card--item--detail Container
        .list-card--item--detail
          Created
          =local_time_ago container.created_at
  - @container.items.each do |item|
    .list-card--item
      .list-card--item--title=link_to item.name, item
      .list-card--item--details
        .list-card--item--detail Item
        .list-card--item--detail
          Created
          =local_time_ago item.created_at

.buttons
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_container_path(@container), :class => 'button is-default'
  -if label = resource.label
    = link_to "View label", label_path(label, format: :pdf), class: 'button'
  -else
    = link_to "Create label", container_labels_path(resource), class: 'button', method: :post
  = link_to t('.destroy', :default => t("helpers.links.destroy")), container_path(@container), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'button is-text'
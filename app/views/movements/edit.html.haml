= title @movement.origin.name, subtitle: "Make a label for where you're going to move stuff", icon: "dolly-cart"

= application_form @movement do |f|
  = f.input :account, as: :hidden
  = f.association :origin, collection: origin_select_items(move: @movement.move), include_blank: false, hint: "What is being moved?", label: "Unpacked items"
  = f.association :destination, collection: destination_select_items, include_blank: false, hint: "Where will it be moved?"
  .buttons
    = f.button :submit, class: 'is-primary'
